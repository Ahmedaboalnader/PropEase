# مرحلة البناء
FROM node:20-slim AS builder

# تثبيت الأدوات المطلوبة للبناء (خصوصًا إذا كنت بتبني مكتبات native)
RUN apt-get update && apt-get install -y python3 make g++ && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# نسخ ملفات الـ package فقط أولًا للاستفادة من الكاش
COPY package*.json ./

# تثبيت الحزم
RUN npm install --legacy-peer-deps

# نسخ باقي الملفات وبناء المشروع
COPY . .
RUN npm run build

# المرحلة النهائية: سيرفر NGINX خفيف
FROM nginx:alpine

# مسح ملفات HTML الافتراضية
RUN rm -rf /usr/share/nginx/html/*

# نسخ ملفات البناء من المرحلة الأولى
COPY --from=builder /app/dist /usr/share/nginx/html

# نسخ إعدادات NGINX المخصصة (لو عندك ملف default.conf)
COPY default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
